<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/DECORATION/1.4.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/DECORATION/1.4.0 http://maven.apache.org/xsd/decoration-1.4.0.xsd"
         name="${project.artifactId}">

    <skin>
        <groupId>org.apache.maven.skins</groupId>
        <artifactId>maven-fluido-skin</artifactId>
        <version>1.3.1</version>
    </skin>

    <poweredBy>
        <logo name="" href="http://www.marmac.name" img="/img/marmac-logo.png"/>
    </poweredBy>

    <custom>
        <fluidoSkin>
            <topBarEnabled>true</topBarEnabled>
            <sideBarEnabled>true</sideBarEnabled>
            <topBarIcon>
                <name>MarMac</name>
                <alt>MarMac Homepage</alt>
                <src>/img/marmac-square-logo.png</src>
                <href>http://www.marmac.name</href>
            </topBarIcon>
            <sourceLineNumbersEnabled>true</sourceLineNumbersEnabled>
            <googleSearch>
                <siteSearch/>
            </googleSearch>
            <facebookLike/>
            <googlePlusOne/>
            <twitter>
                <user>marco_maccio</user>
                <showUser>true</showUser>
                <showFollowers>true</showFollowers>
            </twitter>
            <gitHub>
                <projectId>marcomaccio/camelatwork</projectId>
                <ribbonOrientation>right</ribbonOrientation>
                <ribbonColor>green</ribbonColor>
            </gitHub>
        </fluidoSkin>
    </custom>

    <publishDate format="dd MMM yyyy"/>

    <version position="right"/>

    <body>
        <menu name="Documentation">
            <item name="Home" href="/index.html"/>
        </menu>

        <menu name="Modules" ref="modules" inherit="none"/>
        <menu name="Reports" ref="reports" inherit="none"/>

        <menu name="Links" inherit="none" inheritAsRef="true">
            <item name="Marco's Blog"           href="http://integration360.blogspot.com/"/>
            <item name="Marco's Google Plus"    href="https://plus.google.com/u/0/+MarcoMacci%C3%B2/about"/>
            <item name="Github Homepage"        href="http://www.github.com/marcomaccio"/>
            <item name="Linked In Profile"      href="http://www.linkedin.com/in/marmac"/>
            <item name="Resumup"                href="http://resumup.com/14751661"/>
            <item name="AboutMe"                href="http://about.me/marco.maccio"/>
        </menu>

    </body>
</project>